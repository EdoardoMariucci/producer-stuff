generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  img   String
  packs Pack[]
}

model Pack {
  id     Int      @id @default(autoincrement())
  title  String
  body   String
  src    String
  date   DateTime
  price  String
  userId Int
  user   User     @relation(fields: [userId], references: [id])
}
